{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["standard"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": ["error", "tab"],
		"no-extra-semi": "off",
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"semi": "off"
	}
}
